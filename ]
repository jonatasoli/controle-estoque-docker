version: '3'

services:
  app:
    build:
      context: .
      args:
        - DEBUG_ARG="True"
        # ALLOWED_HOSTS_ARG="[127.0.0.1,localhost]"
        # SECRET_KEY_ARG="CHAVENAOSEGURA"
    ports:
      - 8000:8000
    volumes:
      - ./src:/src
    command: >
      sh -c 'python manage.py runserver 0.0.0.0:8000'

  db:
    image: postgres:10-alpine
    environment:
      - POSTGRES_DB=app
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=senhadanasa
